pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/AnishN04/fullstack2.git'
            }
        }

        stage('Install Frontend Dependencies') {
            steps {
                dir('frontend') {
                    bat 'npm install --no-audit --no-fund'
                }
            }
        }

        stage('Install Backend Dependencies') {
            steps {
                dir('backend') {
                    bat 'npm install --no-audit --no-fund'
                }
            }
        }

        stage('Run Frontend Tests') {
            steps {
                dir('frontend') {
                    bat 'mkdir reports || exit 0'
                    bat 'mkdir reports\\jest || exit 0'
                    bat 'set JEST_JUNIT_OUTPUT=reports\\jest\\frontend-junit.xml && npm test -- --ci --passWithNoTests'
                }
            }
            post {
                always {
                    junit 'frontend/reports/jest/frontend-junit.xml'
                }
            }
        }

        stage('Run Backend Tests') {
            steps {
                dir('backend') {
                    bat 'mkdir reports || exit 0'
                    bat 'mkdir reports\\jest || exit 0'
                    bat 'set JEST_JUNIT_OUTPUT=reports\\jest\\backend-junit.xml && npm test -- --ci --passWithNoTests'
                }
            }
            post {
                always {
                    junit 'backend/reports/jest/backend-junit.xml'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    bat '''
                        set "CI="
                        npm run build
                    '''
                }
            }
        }

        stage('Build Backend') {
            steps {
                dir('backend') {
                    bat 'npm run build'
                }
            }
        }
    }

    post {
        success {
            echo "✅ Build & Tests successful!"
            archiveArtifacts artifacts: 'frontend/build/**', fingerprint: true
        }
        failure {
            echo "❌ Pipeline failed!"
        }
    }
}
