pipeline {
    agent any

    stages {
        stage('Backend: Install') {
            steps {
                dir('backend') {
                    bat 'npm install'
                }
            }
        }

        stage('Backend: Test') {
            steps {
                dir('backend') {
                    bat 'npm test'
                }
            }
            post {
                always {
                    junit 'reports/jest/backend-junit.xml'
                }
            }
        }

        stage('Backend: Build') {
            steps {
                dir('backend') {
                    // Only if your backend has a build step
                    bat 'npm run build'
                }
            }
        }

        stage('Frontend: Install') {
            steps {
                dir('frontend') {
                    bat 'npm install'
                }
            }
        }

        stage('Frontend: Test') {
            steps {
                dir('frontend') {
                    bat 'npm test'
                }
            }
            post {
                always {
                    junit 'reports/jest/frontend-junit.xml'
                }
            }
        }

        stage('Frontend: Build') {
            steps {
                dir('frontend') {
                    bat '''
                        set "CI="
                        npm run build
                    '''
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished!'
        }
        success {
            echo 'Build & Tests successful, archiving frontend artifacts...'
            archiveArtifacts artifacts: 'frontend/build/**', fingerprint: true
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
